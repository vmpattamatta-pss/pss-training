<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<managed-bean>
		<managed-bean-name>employeeDetailsController</managed-bean-name>
		<managed-bean-class>com.sample.training.EmployeeDetailsController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>deptController</managed-bean-name>
		<managed-bean-class>com.sample.training.DeptController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>view</from-outcome>
			<to-view-id>/pages/view.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>create</from-outcome>
			<to-view-id>/pages/create.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>edit</from-outcome>
			<to-view-id>/pages/edit.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>viewD</from-outcome>
			<to-view-id>/pages/viewD.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>createD</from-outcome>
			<to-view-id>/pages/createD.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>editD</from-outcome>
			<to-view-id>/pages/editD.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<converter>
		<converter-id>employeeDetailsConverter</converter-id>
		<converter-class>com.sample.training.EmployeeDetailsConverter</converter-class>
	</converter>
</faces-config>
